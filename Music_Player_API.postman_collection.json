    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["health"]
        }
      }
    },
    {
      "name": "Artists",
      "item": [
        {
          "name": "Listar Artistas",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/artists?limit=10&offset=0",
              "host": ["{{base_url}}"],
              "path": ["artists"],
              "query": [
                {"key": "limit", "value": "10"},
                {"key": "offset", "value": "0"}
              ]
            }
          }
        },
        {
          "name": "Crear Artista",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"The Beatles\",\n  \"biography\": \"Legendary rock band from Liverpool\",\n  \"country\": \"UK\",\n  \"image_url\": \"https://example.com/beatles.jpg\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/artists",
              "host": ["{{base_url}}"],
              "path": ["artists"]
            }
          }
        },
        {
          "name": "Obtener Artista",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/artists/1",
              "host": ["{{base_url}}"],
              "path": ["artists", "1"]
            }
          }
        },
        {
          "name": "Buscar Artistas",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/artists/search?name=beatles",
              "host": ["{{base_url}}"],
              "path": ["artists", "search"],
              "query": [{"key": "name", "value": "beatles"}]
            }
          }
        },
        {
          "name": "Actualizar Artista",
          "request": {
            "method": "PUT",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"The Beatles (Updated)\",\n  \"biography\": \"The most influential band in history\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/artists/1",
              "host": ["{{base_url}}"],
              "path": ["artists", "1"]
            }
          }
        },
        {
          "name": "Eliminar Artista",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/artists/1",
              "host": ["{{base_url}}"],
              "path": ["artists", "1"]
            }
          }
