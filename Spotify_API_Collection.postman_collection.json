            "url": {
              "raw": "{{baseUrl}}/artists/:id",
              "host": ["{{baseUrl}}"],
              "path": ["artists", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "",
                  "description": "UUID del artista a actualizar"
                }
              ]
            },
            "description": "Actualizar un artista existente. Todos los campos son opcionales. Requiere rol ADMIN."
          }
        },
        {
          "name": "Delete Artist (ADMIN)",
          "request": {
            "method": "DELETE",
